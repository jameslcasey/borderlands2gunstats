@model Borderlands2Guns.Models.Guns

@{
    ViewData["Title"] = "Create";
}

@section styles {
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.css">
}

<h2>Create</h2>



<h4>Guns</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input id="gunname" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Level" class="control-label"></label>
                <input id="level" asp-for="Level" class="form-control" />
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select id="guntype" asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<GunType>()"  >
                    <option selected="selected" value=""></option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <select id="brand" asp-for="Brand" class="form-control" asp-items="Html.GetEnumSelectList<Brand>()">
                    <option selected="selected" value=""></option>
                </select>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Damage" class="control-label"></label>
                <input id="damage" asp-for="Damage" class="form-control" />
                <span asp-validation-for="Damage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accuracy" class="control-label"></label>
                <input id="accuracy" asp-for="Accuracy" class="form-control" />
                <span asp-validation-for="Accuracy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FireRate" class="control-label"></label>
                <input id="firerate" asp-for="FireRate" class="form-control" />
                <span asp-validation-for="FireRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReloadSpeed" class="control-label"></label>
                <input id="reloadspeed" asp-for="ReloadSpeed" class="form-control" />
                <span asp-validation-for="ReloadSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MagazineSize" class="control-label"></label>
                <input id="magazinesize" asp-for="MagazineSize" class="form-control" />
                <span asp-validation-for="MagazineSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DamageTimesFireRate" class="control-label"></label>
                <input id="damageTimesFireRate" asp-for="DamageTimesFireRate" class="form-control" />
                <span asp-validation-for="DamageTimesFireRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DamageTimesFireRateTimesMagazineSize" class="control-label"></label>
                <input id="damageTimesFireRateTimesMagazineSize" asp-for="DamageTimesFireRateTimesMagazineSize" class="form-control" />
                <span asp-validation-for="DamageTimesFireRateTimesMagazineSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DamageTimesFireRateTimesMagazineSizePerReloadSpeed" class="control-label"></label>
                <input id="damageTimesFireRateTimesMagazineSizePerReloadSpeed" asp-for="DamageTimesFireRateTimesMagazineSizePerReloadSpeed" class="form-control" />
                <span asp-validation-for="DamageTimesFireRateTimesMagazineSizePerReloadSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DamageOnTarget" class="control-label"></label>
                <input id="damageOnTarget" asp-for="DamageOnTarget" class="form-control" />
                <span asp-validation-for="DamageOnTarget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElementalEffect" class="control-label"></label>
                <select id="elementalEffect" asp-for="ElementalEffect" class="form-control" asp-items="Html.GetEnumSelectList<ElementalEffect>()" >
                    <option selected="selected" value="-1" >Select if Available</option>
                </select>
                <span asp-validation-for="ElementalEffect" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElementalDamagePerSecond" class="control-label"></label>
                <input id="elementalDamagePerSecond" asp-for="ElementalDamagePerSecond" class="form-control" />
                <span asp-validation-for="ElementalDamagePerSecond" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chance" class="control-label"></label>
                <input id="chance" asp-for="Chance" class="form-control" />
                <span asp-validation-for="Chance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElementalDamagePerSecondTimesChance" class="control-label"></label>
                <input id="elementalDamagePerSecondTimesChance" asp-for="ElementalDamagePerSecondTimesChance" class="form-control" />
                <span asp-validation-for="ElementalDamagePerSecondTimesChance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElementalDamageOnTargetTimesDamagePerSecondTimesChance" class="control-label"></label>
                <input id="elementalDamageOnTargetTimesDamagePerSecondTimesChance" asp-for="ElementalDamageOnTargetTimesDamagePerSecondTimesChance" class="form-control" />
                <span asp-validation-for="ElementalDamageOnTargetTimesDamagePerSecondTimesChance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>



    <div class="col-md-6" id="gunSearchResults">

        <table id="mytable" style="width:100%;">
            <thead>
                <tr><th>Level</th><th>Name</th><th>DamageOnTarget</th></tr>
            </thead>
            <tfoot>
                <tr><th>Level</th><th>Name</th><th>DamageOnTarget</th></tr>
            </tfoot>
            <tbody>
                <tr><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td></tr>
                <tr><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td></tr>
                <tr><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td></tr>
            </tbody>
        </table>


    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>

}
